    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.0.0",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.4.2",
    "sirv-cli": "^2.0.2"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "openai": "^3.2.1",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1",
    "react-chatbot-kit": "^2.1.2"
